<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.EditProfileFragment"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:layout_weight="10"
            android:background="@color/colorIcons"
            android:orientation="vertical">

            <TextView
                android:id="@+id/edit_profile_text"
                style="@style/subTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:text="@string/add_card" />

            <LinearLayout
                style="@style/input"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">





                        <ImageView
                            style="icon"
                            android:id="@+id/ic_card_no"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_action_credit_card"
                            android:layout_below="@id/name" />

                        <ImageView
                            android:id="@+id/ic_bank"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_below="@id/ic_card_no"
                            android:src="@drawable/ic_action_bank" />

                        <!--<ImageView-->
                            <!--android:id="@+id/ic_balance"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="0dp"-->
                            <!--android:layout_weight="1"-->
                            <!--android:src="@drawable/ic_action_money" />-->

                        <ImageView
                            android:id="@+id/ic_password"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_below="@id/ic_bank"
                            android:src="@drawable/ic_action_password" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/txt_card_no"
                            style="@style/Subheading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/card_no"
                           />

                        <EditText
                            android:id="@+id/txt_bank"
                            style="@style/Subheading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/bank"
                            android:layout_below="@id/txt_card_no"/>

                        <!--<EditText-->
                            <!--android:id="@+id/txt_balance"-->
                            <!--style="@style/Subheading"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:hint="@string/balance"-->
                            <!--android:layout_below="@id/txt_bank"/>-->
                        <EditText
                        android:id="@+id/txt_password"
                        style="@style/Subheading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password"
                            android:layout_below="@id/txt_bank"/>
                    </RelativeLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/save_button"
                    style="@style/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWarning"
                    android:layout_marginTop="16dp"
                    android:clickable="true"
                    android:text="@string/add" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <TextView
                    style="@style/tiny"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="@string/contact_us" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>