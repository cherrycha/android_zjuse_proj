<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/colorSecondaryText"
                android:scaleType="centerCrop"
                android:src="@drawable/apple" />

            <TextView
                android:id="@+id/item_name"
                style="@style/Headline"
                android:layout_width="341dp"
                android:layout_height="wrap_content"

                android:layout_above="@+id/item_intro"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-16dp"

                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="8dp"
                android:text="Apple" />

            <TextView
                android:id="@+id/item_intro"
                style="@style/Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_image"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:text="The apple is a deciduous tree. When cultivated, the size, shape and branch density are determined by rootstock selection and trimming method." />

            <TextView
                android:id="@+id/item_price"
                style="@style/Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_intro"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="8dp"
                android:text="CNY ï¿¥12"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:background="?android:attr/listDivider" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_price"
        android:gravity="center"
        android:background="@color/colorWhite"
        android:layout_marginTop="8dp"
        >


            <Button
                android:id="@+id/btn_add_to_cart"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="8dp"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimaryLight"
                android:gravity="center"
                android:padding="8dp"
                android:text="ADD TO CART"
                android:textColor="@color/colorPrimaryDark"
                style="@style/Button1"/>

            <Button
                android:id="@+id/btn_buy_now"
                android:layout_toRightOf="@id/btn_add_to_cart"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="8dp"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="8dp"
                android:text="BUY NOW"
                style="@style/Button1"
                android:textColor="@color/colorWhite" />

    </RelativeLayout>
</LinearLayout>