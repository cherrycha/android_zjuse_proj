<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/check_out_title"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:gravity="center"
            android:contentDescription="@string/app_name"
            android:scaleType="center"
            style="@style/Subheading"
            android:textColor="@color/colorWhite"
            android:text="Change Password"
            android:background="@color/colorPrimaryDark"

            />
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/id_txt_old_password"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:fontFamily="sans-serif"
                android:hint="old password"
                android:textSize="14sp"
               android:layout_alignParentTop="true"
                android:inputType="textPassword" />
            <EditText
                android:id="@+id/id_txt_new_password"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:hint="new password"
                android:textSize="14sp"
                android:layout_below="@+id/id_txt_old_password"
                android:inputType="textPassword" />
            <EditText
                android:id="@+id/id_txt_confirm_password"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:textSize="14sp"
                android:hint="comfirm password"
                android:layout_below="@id/id_txt_new_password"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/id_txtbtn_confirm_change_passwd"
                android:layout_below="@id/id_txt_confirm_password"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                style="@style/tiny"
                android:textSize="14sp"
                android:textColorHint="@color/colorSecondaryText"
                android:hint="Confirm"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>