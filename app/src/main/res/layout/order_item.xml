<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="activity.OrderListFragment">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/ic_order"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_history"
                android:layout_marginStart="24dp"
                android:scaleType="center"
                />
            <TextView
                android:id="@+id/txt_order_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_toEndOf="@id/ic_order"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:gravity="left"
                style="@style/Body1"
                android:text="订单号:"/>
            <TextView
                android:id="@+id/txt_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              android:layout_toEndOf="@id/txt_order_hint"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:gravity="left"
                style="@style/Body1"
                android:text="@string/test"/>
            <TextView
                android:id="@+id/txt_value_hint"
                android:layout_width="wrap_content"
                android:layout_below="@id/txt_order_hint"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_toEndOf="@id/ic_order"
                android:layout_marginTop="8dp"
                android:gravity="left"
                style="@style/Body1"
                android:text="价格:"/>
            <TextView
                android:id="@+id/txt_value"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/txt_value_hint"
                android:layout_below="@id/txt_order"
                android:layout_marginStart="24dp"
                android:gravity="left"
                style="@style/Body1"
                android:text="@string/test"/>
            <ImageButton
                android:id="@+id/btn_delete_addr"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="24dp"
                android:background="@drawable/ic_action_delete"
                android:tint="@color/colorWarning"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>