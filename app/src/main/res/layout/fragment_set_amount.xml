<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:id="@+id/buy_now_title"
                android:layout_width="200dp"
                android:layout_height="24dp"
                android:contentDescription="@string/app_name"
                android:scaleType="center"
                style="@style/Subheading"
                android:textColor="@color/colorPrimaryText"
                android:text="Buy Now"
                />
            <TextView
                android:id="@+id/id_tv_amount"
                android:layout_below="@id/buy_now_title"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="8dp"
                android:text="amount:"
                android:textSize="14sp"

                />
            <EditText
                android:id="@+id/id_txt_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@id/id_tv_amount"

             />

            <TextView
                android:id="@+id/id_txt_confirm_payment"
                android:layout_below="@id/id_txt_amount"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="8dp"
                style="@style/tiny"
                android:textSize="14sp"
                android:hint="Non secret pay"

                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>