<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:id="@+id/delete_order_title"
                android:layout_width="200dp"
                android:layout_height="32dp"
                android:contentDescription="@string/app_name"
                android:padding="4dp"
                style="@style/Subheading"
                android:gravity="center"
                android:textColor="@color/colorWhite"

                android:text="Options"
                android:background="@color/colorPrimaryDark"

                />


            <TextView
                android:id="@+id/id_txt_set_as_default"
                android:layout_below="@id/delete_order_title"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="8dp"
                style="@style/tiny"
                android:textSize="14sp"
                android:hint="Set as Default"
                />
            <TextView
                android:id="@+id/id_txt_delete"
                android:layout_below="@id/delete_order_title"
               android:layout_toRightOf="@id/id_txt_set_as_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="24dp"
                style="@style/tiny"
                android:textSize="14sp"
                android:hint="Delete"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>